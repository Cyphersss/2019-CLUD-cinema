<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cinema.data.management.HallMapper">
    <update id="updateHall" parameterType="com.example.cinema.vo.HallVO">
        update hall set name = #{name}, hall_column = #{column}, hall_row= #{row}
        where name=#{oldName}
    </update>
    <delete id="deleteHall" parameterType="com.example.cinema.vo.HallVO">
        delete from hall where name=#{oldName}
    </delete>
    <insert id="insertHall" useGeneratedKeys="true" keyProperty="id">
        insert into hall(name,hall_column,hall_row)
        values(#{name},#{column},#{row})
    </insert>
    <select id="selectAllHall" resultMap="Hall">
        select * from hall
    </select>
    <select id="selectHallById" resultMap="Hall">
        select * from hall where id = #{hallId}
    </select>

    <resultMap id="Hall" type="com.example.cinema.po.Hall">
        <result column="id" property="id"></result>
        <result column="name" property="name"></result>
        <result column="hall_column" property="column"></result>
        <result column="hall_row" property="row"></result>
    </resultMap>

</mapper>